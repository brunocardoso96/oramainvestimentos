<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_cardview">

    <TextView
        android:id="@+id/strategy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estratégia Renda Variável"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="#CDCDCD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Crédito Privado High Grade"
        app:layout_constraintStart_toStartOf="@+id/strategy"
        app:layout_constraintTop_toBottomOf="@+id/strategy" />

    <TextView
        android:id="@+id/simpleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Órama DI Tesouro FIRF Simples LP"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/credit"
        app:layout_constraintStart_toStartOf="@+id/credit"/>

    <TextView
        android:id="@+id/aplicationMininum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicação mínima: R$1.000,00"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/simpleName"/>

    <TextView
        android:id="@+id/porcent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6,09%"
        android:textSize="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintEnd_toEndOf="@+id/time"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 meses"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/aplicationMininum"
        app:layout_constraintTop_toTopOf="@+id/aplicationMininum"/>

    <View
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@drawable/bar_left"
        app:layout_constraintBottom_toBottomOf="@+id/aplicationMininum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/strategy" />


</androidx.constraintlayout.widget.ConstraintLayout>