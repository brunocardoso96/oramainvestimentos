<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6C6C6"
    tools:context=".ui.feature.detail.activity.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/dividendsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="Dividendos"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:background="@color/grey_light"
                    android:gravity="center"
                    android:text="Mês"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:background="@color/grey_light"
                    android:gravity="center"
                    android:text="2021"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="3"
                    android:background="@color/grey_light"
                    android:gravity="center"
                    android:text="12M"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearPercent"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="1.79%"
                    android:textColor="@color/green_water"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/twelvePercent"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="1.79%"
                    android:textColor="@color/green_water"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/monthPercent"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="1.79%"
                    android:textColor="@color/green_water"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/retrievalLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/dividendsLayout"
            app:layout_constraintStart_toStartOf="@id/dividendsLayout"
            app:layout_constraintTop_toBottomOf="@id/dividendsLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/grey_light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Prazo de cotização\n de resgate"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/retrievalDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="D+30"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/grey_light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Resgate\n mínimo"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/minimalRetrievalValor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="R$ 250,00"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/grey_light"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Saldo mínimo \n de permanência"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/minimumBalance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="R$ 250,00"
                    android:textColor="@color/grey_dark_2"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tipInfo"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="DICA: Este investimento é a opção para quem quer exposição à bolsa com uma gestão profissional na seleção de ações."
            android:textColor="@color/green_water"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@id/retrievalLayout"
            app:layout_constraintStart_toStartOf="@id/retrievalLayout"
            app:layout_constraintTop_toBottomOf="@id/retrievalLayout" />

        <TextView
            android:id="@+id/rulesApplication"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="@color/grey_light"
            android:gravity="left|center"
            android:paddingStart="14dp"
            android:text="Regras para aplicação"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/tipInfo"
            app:layout_constraintStart_toStartOf="@id/tipInfo"
            app:layout_constraintTop_toBottomOf="@id/tipInfo" />

        <LinearLayout
            android:id="@+id/firstApplicationLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/rulesApplication"
            app:layout_constraintStart_toStartOf="@+id/rulesApplication"
            app:layout_constraintTop_toBottomOf="@+id/rulesApplication">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingStart="14dp"
                android:text="Mínimo para 1ª aplicação"
                android:textColor="@color/grey_dark_2"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/minimumBalance"
                tools:layout_editor_absoluteY="308dp" />

            <TextView
                android:id="@+id/firstApplication"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|right"
                android:paddingRight="14dp"
                android:text="R$ 250,00"
                android:textColor="@color/grey_dark_2"
                android:textSize="16sp"
                tools:layout_editor_absoluteY="308dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstRescueLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/firstApplicationLayout"
            app:layout_constraintStart_toStartOf="@+id/firstApplicationLayout"
            app:layout_constraintTop_toBottomOf="@+id/firstApplicationLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingStart="14dp"
                android:text="Mínimo para aplicações \nadicionais"
                android:textColor="@color/grey_dark_2"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/minimumBalance"
                tools:layout_editor_absoluteY="308dp" />

            <TextView
                android:id="@+id/applicationMinimum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|right"
                android:paddingRight="14dp"
                android:text="R$ 250,00"
                android:textColor="@color/grey_dark_2"
                android:textSize="16sp"
                tools:layout_editor_absoluteY="308dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/applicationRescueDayLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/firstRescueLayout"
            app:layout_constraintStart_toStartOf="@+id/firstRescueLayout"
            app:layout_constraintTop_toBottomOf="@+id/firstRescueLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingStart="14dp"
                android:text="Dias para conversão da \naplicação"
                android:textColor="@color/grey_dark_2"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/minimumBalance"
                tools:layout_editor_absoluteY="308dp" />

            <TextView
                android:id="@+id/dayConvert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|right"
                android:paddingRight="14dp"
                android:text="R$ 250,00"
                android:textColor="@color/grey_dark_2"
                android:textSize="16sp"
                tools:layout_editor_absoluteY="308dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/applicationRescueHourLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/applicationRescueDayLayout"
            app:layout_constraintStart_toStartOf="@+id/applicationRescueDayLayout"
            app:layout_constraintTop_toBottomOf="@+id/applicationRescueDayLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingStart="14dp"
                android:text="Horário limite para \naplicação"
                android:textColor="@color/grey_dark_2"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/minimumBalance"
                tools:layout_editor_absoluteY="308dp" />

            <TextView
                android:id="@+id/hourApplication"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|right"
                android:paddingRight="14dp"
                android:text="14:00"
                android:textColor="@color/grey_dark_2"
                android:textSize="16sp"
                tools:layout_editor_absoluteY="308dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>